<h1>Register</h1>

<form action="/admin/edit/<%= user.id%>?_method=PUT" method="POST">
  <div>
    <label for="name">Name</label>
    <input type="text" id="name" name="name" value="<%=user.name%>" required />
  </div>
  <div>
    <label for="email">Email</label>
    <input
      type="email"
      id="email"
      name="email"
      value="<%=user.email%>"
      required
    />
  </div>
  <button type="submit">Update</button>
</form>
