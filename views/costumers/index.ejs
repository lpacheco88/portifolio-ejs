<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h1 class="display-4">Projetos</h1>
    <p class="lead">Overview dos projetos em que ja trabalhei.</p>
</div>

<main role="main">
    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row">
                <% costumers.forEach(costumer => { %>
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" data-src="/imgs/thumbnailsvg.svg" alt="Card image cap">
                        <div class="card-body">
                            <img height="150" width="100" src="<%= costumer.costumerImagePath%>" />
                            <p class="card-text">This is a wider card with supporting text below as a natural lead-in to
                                additional content. This content is a little bit longer.</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <%- include('../partials/crudBtn', {url:`/costumers/${costumer.id}`})%>
                                </div>
                                <small
                                    class="text-muted"><%- include('../partials/deleteForm', {url:`/costumers/${costumer.id}`})%></small>
                            </div>
                        </div>
                    </div>
                </div>
                <%})%>



            </div>
        </div>
    </div>
</main>